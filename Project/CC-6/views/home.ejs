<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
  <title>User Database</title>
</head>
<body>
  <h1>User Database</h1>

  <div class="container">
    <div class="row">
      <div class="col-sm">
        <div class="input-form">
            <div class="form-group">
              <input class="form-control" placeholder="username" id="regUsername">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="password" id="regPassword">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="fullname" id="regFullname">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="email" id="regEmail">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="age" id="regAge">
            </div>
            <button type="submit" class="btn btn-primary" onclick=handleRegister()>Register</button>
        </div> <br>
        <div class="input-form">
          <div class="form-group">
            <input class="form-control" placeholder="username" id="findUsername">
          </div>
          <button type="submit" class="btn btn-primary" onclick=handleFindUser()>Find</button>
        </div>
      </div>
      <div class="col-sm">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Username</th>
              <th scope="col">Fullname</th>
              <th scope="col">Email</th>
              <th scope="col">Age</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < users.length; i++ ) { %>
              <tr id="<%= users[i].id %>">
                <th scope="row"><%= i + 1 %></th>
                <td><%= users[i].username %></td>
                <td><%= users[i].Biodata.fullname %></td>
                <td><%= users[i].Biodata.email %></td>
                <td><%= users[i].Biodata.age %></td>
                <td>
                  <button type="submit" class="btn btn-primary" onclick=handleEdit(<%= users[i].id %>)>Edit</button>
                </td>
                <td>
                  <button type="submit" class="btn btn-danger" onclick=handleDelete(<%= users[i].id %>)>Delete</button>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="/js/script.js"></script>
</body>
</html>